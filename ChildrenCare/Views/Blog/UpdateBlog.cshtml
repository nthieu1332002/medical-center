                </div>
                <div class="row mb-2">
                    <div class="col-4 title">
                        Thumbnail
                    </div>
                    <div class="col-8">
                        <input asp-for="ThumbnailFile" type="file" accept="image/x-png,image/gif,image/jpeg" id="thumbnail">
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 title">
                        Brief Information
                    </div>
                    <div class="col-8">
                        <input asp-for="BriefInfo" type="text" class="w-100" value="@blog.BriefInfo" id="briefInfo">
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 title">
                        Description
                    </div>
                    <div class="col-8">
                        <textarea asp-for="BlogBody" type="text" class="w-100" id="content" style="min-height: 120px">
                                        </textarea>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 title">
                        Category
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", @blog.CategoryId))" id="category"></select>
                    </div>
                </div>
            </div>
